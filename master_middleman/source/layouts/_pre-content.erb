	  product_info['local_product_version'] == '2.4' || 
	  product_info['local_product_version'] == '2.3' || 
	  product_info['local_product_version'] == '2.2' || 
	  product_info['local_product_version'] == '2.1' || 
	  product_info['local_product_version'] == '2.0' %>
